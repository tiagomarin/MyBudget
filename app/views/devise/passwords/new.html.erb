<div class="w-full flex flex-col gap-8 justify-center items-center bg-main text-text-light">
  <% if notice %>
    <p class="alert alert-success text-center bg-main text-text-light"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger text-center bg-main text-text-light"><%= alert %></p>
  <% end %>

  <h2 class="font-bold text-xl">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="w-full flex flex-col gap-5 mb-5">
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "email", autocomplete: "email", class: "w-full  text-text-dark" %>
      </div>

      <div class="actions w-full py-3 px-5 bg-second font-medium text-center text-lg">
        <div class="py-3 px-5 border-solid border-2 border-gray-50">
          <%= f.submit "Send me reset instructions" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
