<%= link_to category do %>
  <div id="<%= dom_id category %>" class="flex justify-between items-center	bg-white p-5">
    <p class="my-5 text-2xl">
      <%= category.icon %>
    </p>
    
    <p class="my-5">
      <%= category.name %>
    </p>

    <p class="font-bold">
      <%= number_to_currency(category.expenses.sum(:amount)) %>
    </p>
  </div>
<% end %>